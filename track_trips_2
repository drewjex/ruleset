ruleset track_trips_2 {
    meta {
        name "Track Trips"
        logging on
        author "Drew Jex"
    }

    global {
        long_trip = 3
    }

    rule process_trip is active {
        select when car new_trip mileage re#(.*)# setting(m);
        fired {
            raise explicit event "trip_processed"
                attributes { "attrs" : event:attrs() }
        }
    }

    rule find_long_trips {
        select when explicit trip_processed
        pre {
            m = event:attr("attrs").mileage
            is_greater = m.as("Number") > long_trip
        }
        if is_greater then
            send_directive("found_long_trip")
                with new_long_trip = m
        fired {
            raise explicit event "found_long_trip"
                attributes { "attrs" : event:attrs() }
        }
    }
}